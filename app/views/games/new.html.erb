<h1>New Game</h1>

<p>Here are your letters:</p>

<ul style="list-style: none; padding: 0; display: flex; gap: 10px;">
  <% @letters.each do |letter| %>
    <li style="background-color: #f0f0f0; padding: 10px 15px; border-radius: 8px; font-weight: bold;">
      <%= letter %>
    </li>
  <% end %>
</ul>

<hr>

<form action="<%= score_path %>" method="post">
  <!-- This authenticity token protects your form -->
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <!-- Keep the letters to send them to the score action -->
  <%= hidden_field_tag :letters, @letters.join %>

  <label for="word">Whatâ€™s the longest word you can make?</label><br>
  <input type="text" name="word" id="word" placeholder="Type your word" required>

  <input type="submit" value="Check your score">
</form>
